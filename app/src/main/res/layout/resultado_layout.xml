<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:text="Inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />
    <!-- Regresa a la pantalla principal -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="214dp"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606"
        app:srcCompat="@drawable/ic_launcher_background" />
    <!-- Cambiar app:srcCompat a @drawable/corona o a @drawable/sad_blob -->

    <TextView
        android:id="@+id/txtAnuncio"
        android:layout_width="345dp"
        android:layout_height="80dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Cambiar android:text a "Felicidades" o "Qué lástima" -->

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <!-- Cambiar android:text a "Has ganado" o "Has perdido" -->
</androidx.constraintlayout.widget.ConstraintLayout>